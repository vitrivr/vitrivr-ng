{
  "api": {
    "host": "default"
  },
  "resources": {
    "host_thumbnails": "http://10.34.58.176/lsc21/lsc21-thumbnails/:o/:s.jpg",
    "host_objects": "http://10.34.58.176/lsc21/lsc21-image/:n/:S.jpg"
  },
  "competition": {
    "host": "",
    "log": false,
    "lsc": true,
    "vbs": false,
    "tls": true
  },
  "mlt": {
    "IMAGE": [
      "clipimage"
    ],
    "IMAGE_SEQUENCE": [
      "clipimage"
    ]
  },
  "query": {
    "temporal_mode": "TEMPORAL_DISTANCE",
    "temporal_max_length": 86400,
    "default_temporal_distance": 1800,
    "history": 0,
    "options": {
      "image": true,
      "audio": false,
      "model3d": false,
      "text": true,
      "tag": true,
      "semantic": true,
      "boolean": true,
      "map": true,
      "skeleton": false
    },
    "text": {
      "categories": [
        [
          "ocr",
          "Text on Screen"
        ],
        [
          "visualtextcoembedding",
          "Text Co-Embedding"
        ],
        [
          "clip",
          "CLIP"
        ]
      ]
    },
    "boolean": [
      {
        "display": "Hour",
        "input": "RANGE",
        "table": "features_table_lsc20meta",
        "col": "p_hour",
        "range": [0, 23]
      },
      {
        "display": "Weekday",
        "input": "OPTIONS",
        "table": "features_table_lsc20meta",
        "col": "p_day_of_week",
        "options": [
          "MONDAY",
          "TUESDAY",
          "WEDNESDAY",
          "THURSDAY",
          "FRIDAY",
          "SATURDAY",
          "SUNDAY"
        ]
      },
      {
        "display": "Day of Month",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "p_day",
        "type": "number"
      },
      {
        "display": "Location",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "semantic_name"
      },
      {
        "display": "Year",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "p_year",
        "type": "number"
      },
      {
        "display": "Month",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "p_month"
      },
      {
        "display": "Transport",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "activity_type"
      },
      {
        "display": "Timezone",
        "input": "DYNAMICOPTIONS",
        "table": "features_table_lsc20meta",
        "col": "timezone"
      },
      {
        "display": "Segment Id [Meta]",
        "input": "TEXT",
        "table": "features_table_lsc20meta",
        "col": "id",
        "operators": [
          "="
        ]
      },
      {
        "display": "Segment Id [Segments]",
        "input": "TEXT",
        "table": "cineast_segment",
        "col": "segmentid",
        "operators": [
          "="
        ]
      },
      {
        "display": "Object Id [Segments]",
        "input": "TEXT",
        "table": "cineast_segment",
        "col": "objectid",
        "operators": [
          "="
        ]
      }
    ]
  },
  "refinement": {
    "filters": [
      [
        "LSCMETA.semantic_name",
        "CHECKBOX"
      ],
      [
        "LSCMETA.timezone",
        "CHECKBOX"
      ],
      [
        "LSCMETA.p_day_of_week",
        "CHECKBOX"
      ],
      [
        "LSCMETA.p_hour",
        "SLIDER"
      ],
      [
        "LSCMETA.p_month",
        "CHECKBOX"
      ],
      [
        "LSCMETA.p_year",
        "CHECKBOX"
      ]
    ]
  }
}

