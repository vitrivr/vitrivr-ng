{
  "api": {
    "host": "default"
  },
  "resources": {
    "host_thumbnails": "http://localhost:4567/thumbnails/:o/:s:x",
    "host_objects": "http://localhost:4567/objects/:n"
  },
  "competition": {
    "host": "dmi-dres.dmi.unibas.ch:443",
    "tls": true,
    "log": false,
    "lsc": false,
    "vbs": false
  },
  "mlt": {
    "VIDEO": ["visualtextcoembedding"],
    "IMAGE": ["visualtextcoembedding"]
  },
  "query": {
    "history": 0,
    "options": {
      "image": true,
      "audio": false,
      "model3d": false,
      "text": true,
      "tag": true,
      "semantic": true,
      "boolean": true,
      "map": true
    },
    "text": {
      "categories": [
        ["visualtextcoembedding", "Text Co-Embedding"]
      ]
    },
    "boolean": [
      {
        "display": "Example Range",
        "input": "RANGE",
        "table": "table",
        "col": "col",
        "range": [0, 23]
      },
      {
        "display": "Example Provided Options",
        "input": "OPTIONS",
        "table": "table",
        "col": "col",
        "options": [
          "MONDAY",
          "TUESDAY",
          "WEDNESDAY",
          "THURSDAY",
          "FRIDAY",
          "SATURDAY",
          "SUNDAY"
        ]
      },
      {
        "display": "Example Dynamic Integer Options",
        "input": "DYNAMICOPTIONS",
        "table": "tablename",
        "col": "intcolname",
        "type": "number"
      },
      {
        "display": "Segment Id",
        "input": "TEXT",
        "table": "cineast_segment",
        "col": "segmentid",
        "operators": [
          "="
        ]
      }
    ]
  },
  "refinement": {
    "filters": [
      [
        "dominantcolor.color",
        "CHECKBOX"
      ],
      [
        "technical.duration",
        "SLIDER"
      ]
    ]
  }
}
