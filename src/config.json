{
  "api": {
    "host" : "default"
  },
  "resources": {
    "host_thumbnails" : "http://10.34.58.87/lsc21/lsc21-thumbnails/:o/:s.jpg",
    "host_objects": "http://10.34.58.87/lsc21/lsc21-image/:n/:S.jpg"
  },
  "competition": {
    "host": "vbs.itec.aau.at:9443",
    "log": false,
    "lsc": true,
    "vbs": false,
    "tls": true
  },
  "mlt": {
    "IMAGE": ["objectInstances"]
  },
  "query": {
    "temporal_mode": "TEMPORAL_DISTANCE",
    "temporal_max_length": 86400,
    "default_temporal_distance": 1800,
    "history": 0,
    "options": {
      "image": true,
      "audio": false,
      "model3d": false,
      "motion": false,
      "text": true,
      "tag": true,
      "semantic": true,
      "boolean": true
    },
    "text": {
      "categories": [
        ["ocr", "Text on Screen"],
	["visualtextcoembedding", "Text Co-Embedding"]
      ]
    },
    "boolean": [
      ["Hour", "RANGE", "features_table_lsc20meta.p_hour", 0, 23],
      ["Day of Week", "OPTIONS", "features_table_lsc20meta.p_day_of_week", "MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY", "SATURDAY", "SUNDAY"],
      ["Location Semantic", "DYNAMICOPTIONS", "features_table_lsc20meta.semantic_name", "features_table_lsc20meta", "semantic_name"],
      ["Year", "DYNAMICOPTIONS", "features_table_lsc20meta.p_year", "features_table_lsc20meta", "p_year"],
      ["Month", "DYNAMICOPTIONS", "features_table_lsc20meta.p_month", "features_table_lsc20meta","p_month"],
      ["Activity Type (Transport)", "DYNAMICOPTIONS", "features_table_lsc20meta.activity_type", "features_table_lsc20meta","activity_type"],
      ["Timezone", "DYNAMICOPTIONS", "features_table_lsc20meta.timezone", "features_table_lsc20meta", "timezone"],
      ["[Segment Id]", "TEXT", "features_table_lsc20meta.id"],
      ["(Minute Id)", "TEXT", "features_table_lsc20meta.minute_id"],
      ["(Elevation)", "NUMERIC", "features_table_lsc20meta.elevation"],
      ["(Speed)", "NUMERIC", "features_table_lsc20meta.speed"],
      ["(Heart)", "NUMERIC", "features_table_lsc20meta.heart"],
      ["(Calories)", "TEXT", "features_table_lsc20meta.calories"]
    ]
  },
  "refinement": {
    "filters": [
      ["LSCMETA.semantic_name", "CHECKBOX"],
      ["LSCMETA.timezone", "CHECKBOX"],
      ["LSCMETA.p_day_of_week", "CHECKBOX"],
      ["LSCMETA.p_hour", "SLIDER"],
      ["LSCMETA.p_month", "CHECKBOX"],
      ["LSCMETA.p_year", "CHECKBOX"]
    ]
  }
}

