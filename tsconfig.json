{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "module": "es2020",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2018",
    "noStrictGenericChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "three",
      "jszip"
    ],
    "lib": ["es2020", "dom"]
  }
}
